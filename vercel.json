{
    "builds": [
        {
            "src": "src/api/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "routes": [
        {
            "src": "/api/saveScore",
            "dest": "src/api/saveScore.js"
        },
        {
            "src": "/api/getScores",
            "dest": "src/api/getScores.js"
        },
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ],
    "functions": {
        "src/api/*.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}