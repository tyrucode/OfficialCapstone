{
    "version": 2,
    "builds": [
        {
            "src": "src/server/index.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/src/server/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}